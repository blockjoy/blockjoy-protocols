{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependencies Dashboard",
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "ignoreTests": false,
  "requiredStatusChecks": ["build"],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "blockjoy[bot]",
      "password": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "description": "Client version control",
      "matchPaths": ["clients/**"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Lighthouse version exclusions. Example: use /^5\\.4\\.0-.*/ to ignore version 5.4.0 with any sha",
      "matchPaths": ["clients/consensus/lighthouse/**"],
      "matchPackagePatterns": ["LIGHTHOUSE_VERSION"],
      "ignoreVersions": []
    },
    {
      "description": "Erigon version exclusions. Example: use /^2\\.56\\.0-.*/ to ignore version 2.56.0 with any sha",
      "matchPaths": ["clients/exec/erigon/**"],
      "matchPackagePatterns": ["ERIGON_VERSION"],
      "ignoreVersions": []
    },
    {
      "description": "Reth version exclusions. Example: use /^0\\.1\\.0-alpha\\.14-.*/ to ignore version 0.1.0-alpha.14 with any sha",
      "matchPaths": ["clients/exec/reth/**"],
      "matchPackagePatterns": ["RETH_VERSION"],
      "ignoreVersions": []
    },
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "versioning": "regex:^v(?<major>\\d+)$"
    },
    {
      "description": "Disable updates for Ubuntu base images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "debian",
        "ubuntu"
      ],
      "enabled": false
    },
    {
      "description": "Internal image dependencies",
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "groupName": "internal-dependencies",
      "pinDigests": false,
      "separateMinorPatch": false,
      "separateMajorMinor": false,
      "matchPackagePatterns": [
        "^ghcr.io/blockjoy/"
      ]
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}

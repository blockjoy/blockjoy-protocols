{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependencies Dashboard",
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "ignoreTests": false,
  "requiredStatusChecks": ["build"],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "blockjoy[bot]",
      "password": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "description": "Client version control - disable major updates",
      "matchPaths": ["clients/**"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Client version control. To exclude multiple versions, use pattern: /^(?!2\\.56\\.0-.*|2\\.57\\.0-.*|3\\.0\\.0-.*).*$/ to exclude versions 2.56.0, 2.57.0, and 3.0.0 with any sha",
      "matchPaths": ["clients/**"],
      "matchPackagePatterns": [".*_VERSION"],
      "allowedVersions": ".*",
      "enabled": true
    },
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "versioning": "regex:^v(?<major>\\d+)$"
    },
    {
      "description": "Disable updates for Ubuntu base images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "debian",
        "ubuntu"
      ],
      "enabled": false
    },
    {
      "description": "Internal image dependencies",
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "groupName": "internal-dependencies",
      "pinDigests": false,
      "separateMinorPatch": false,
      "separateMajorMinor": false,
      "matchPackagePatterns": [
        "^ghcr.io/blockjoy/"
      ]
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}

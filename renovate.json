{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "dockerfile",
    "regex"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependencies Dashboard",
  "docker": {
    "enabled": true,
    "username": "renovate-bot",
    "password": "{{secrets.GITHUB_TOKEN}}"
  },
  "packageRules": [
    {
      "description": "Internal image dependencies",
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePatterns": [
        "^ghcr.io/blockjoy/"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "internal-dependencies",
      "pinDigests": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG (?<arg>.*?)_IMAGE=(?<depName>ghcr.io\\/blockjoy\\/[^:]+)(:(?<currentValue>[^\\s]+))?"
      ],
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "https://ghcr.io",
      "depNameTemplate": "{{{depName}}}",
      "extractVersionTemplate": "^(?<version>.*?)$"
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "renovate-bot",
      "password": "{{secrets.GITHUB_TOKEN}}"
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}

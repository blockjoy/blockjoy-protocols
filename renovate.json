{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "custom.regex"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependencies Dashboard",
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "ignoreTests": false,
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "blockjoy[bot]",
      "password": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Base runtime images (Level 1)",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "base-images/**"
      ],
      "matchPackageNames": [
        "/^ghcr.io/blockjoy//"
      ],
      "enabled": true,
      "groupName": "base-runtime-images",
      "pinDigests": false,
      "separateMinorPatch": false,
      "separateMajorMinor": false,
      "versioning": "regex:^v(?<major>\\d{8})\\.(?<minor>\\d+)$",
      "automerge": true,
      "prPriority": 10
    },
    {
      "description": "Exclude build images from base runtime images",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "base-images/**/*-build/**"
      ],
      "matchPackageNames": [
        "/^ghcr.io/blockjoy//"
      ],
      "enabled": false
    },
    {
      "description": "Build base images (Level 2)",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "base-images/**/*-build/**"
      ],
      "matchPackageNames": [
        "/^ghcr.io/blockjoy//"
      ],
      "enabled": true,
      "groupName": "build-base-images",
      "pinDigests": false,
      "separateMinorPatch": false,
      "separateMajorMinor": false,
      "versioning": "regex:^v(?<major>\\d{8})\\.(?<minor>\\d+)$",
      "automerge": true,
      "prPriority": 8
    },
    {
      "description": "Client images (Level 3)",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "clients/**"
      ],
      "matchPackageNames": [
        "/^ghcr.io/blockjoy//"
      ],
      "enabled": true,
      "groupName": "client-images",
      "pinDigests": false,
      "separateMinorPatch": false,
      "separateMajorMinor": false,
      "versioning": "regex:^v(?<major>\\d{8})\\.(?<minor>\\d+)$",
      "automerge": true,
      "prPriority": 6
    },
    {
      "description": "Protocol images (Level 4)",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "protocols/**"
      ],
      "matchPackageNames": [
        "/^ghcr.io/blockjoy//"
      ],
      "enabled": true,
      "groupName": "protocol-images",
      "pinDigests": false,
      "separateMinorPatch": false,
      "separateMajorMinor": false,
      "versioning": "regex:^v(?<major>\\d{8})\\.(?<minor>\\d+)$",
      "automerge": true,
      "prPriority": 4
    },
    {
      "description": "Client version control. To exclude multiple versions, use pattern: /^(?!2\\.56\\.0-.*|2\\.57\\.0-.*|3\\.0\\.0-.*).*$/ to exclude versions 2.56.0, 2.57.0, and 3.0.0 with any sha",
      "matchFileNames": [
        "clients/**"
      ],
      "allowedVersions": ".*",
      "enabled": true,
      "matchPackageNames": [
        "/.*_VERSION/"
      ]
    },
    {
      "description": "Disable updates for external images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "debian",
        "ubuntu",
        "golang"
      ],
      "enabled": false
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 1,
  "schedule": [
    "* 5 * * *"
  ]
}
